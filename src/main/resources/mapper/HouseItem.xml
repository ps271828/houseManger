<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.houses.dao.IHouseItemDao">

    <sql id="allProp">
        id                  id,
        house_id            houseId,
        item_serial         itemSerial,
        item_direction      itemDirection,
        item_location       itemLocation,
        item_full_example_image      fullItemExampleImage,
        comment             comment
    </sql>

    <insert id="batchSaveHouseItem" parameterType="java.util.List" useGeneratedKeys="true" keyProperty="id">
        <foreach collection="list" item="item" index="index" open="" close="" separator=";">
            insert into house_item
            <trim prefix="(" suffix=")" suffixOverrides=",">
                <if test="item.id != null">
                    id,
                </if>
                <if test="item.houseId != null">
                    house_id,
                </if>
                <if test="item.itemSerial != '' and item.itemSerial != null">
                    item_serial,
                </if>
                <if test="item.itemDirection != null">
                    item_direction,
                </if>
                <if test="item.itemLocation != null">
                    item_location,
                </if>
                <if test="item.fullItemExampleImage != '' and item.fullItemExampleImage != null">
                    item_full_example_image,
                </if>
                <if test="item.comment != '' and item.comment != null">
                    comment,
                </if>
            </trim>
            values
            <trim prefix="(" suffix=")" suffixOverrides=",">
                <if test="item.id != null">
                    #{id},
                </if>
                <if test="item.houseId != null">
                    #{item.houseId},
                </if>
                <if test="item.itemSerial != '' and item.itemSerial != null">
                    #{item.itemSerial},
                </if>
                <if test="item.itemDirection != null">
                    #{item.itemDirection},
                </if>
                <if test="item.itemLocation != null">
                    #{item.itemLocation},
                </if>
                <if test="item.fullItemExampleImage != '' and item.fullItemExampleImage != null">
                    #{item.fullItemExampleImage},
                </if>
                <if test="item.comment != '' and item.comment != null">
                    #{item.comment},
                </if>
            </trim>
        </foreach>
    </insert>
</mapper>